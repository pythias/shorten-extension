{
  "name": "缩短网址",
  "version": "1.0.6",
  "description": "使用微博™将长网址缩短成t.cn的短网址",
  "permissions": [
    "activeTab",
    "https://weibo.com/*",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.weibo.com/*"
      ],
      "js": [
        "utils.js"
      ]
    }
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "homepage_url": "https://weibo.com/u/1763952531",
  "browser_action": {
    "default_popup": "shorten.html",
    "default_icon": {
      "16": "images/shorten-16.png",
      "32": "images/shorten-32.png",
      "48": "images/shorten-48.png",
      "128": "images/shorten-128.png"
    }
  },
  "icons": {
    "16": "images/shorten-16.png",
    "32": "images/shorten-32.png",
    "48": "images/shorten-48.png",
    "128": "images/shorten-128.png"
  },
  "manifest_version": 2
}